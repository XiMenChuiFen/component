/* component/touch-left/touch-left.wxss */

.list {
  position: relative;
  border-bottom: 1px solid #f2f2f2;
}
.list-content {
  position: relative;
  z-index: 2;
  height: 70px;
  line-height: 70px;
  background: #fff;
  /* transition: 0.15s; */
  /* transition: right 0.2s ease-in-out; */
}
.transition {
  transition: right 0.2s ease-in-out; 
}
.list-buttom {
  position: absolute;
  right: 0;
  top: 0;
  height: 70px;
  width: 100px;
  text-align: center;
  line-height: 70px;
  background: red;
  color: #fff;
  font-size: 16px;
}